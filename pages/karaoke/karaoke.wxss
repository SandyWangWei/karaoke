page {
  width: 100%;
  height: 100%;
}

.image-bg {
  height: 100%;
  width: 100%;
}

.home {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%;
}

.lyric{
  width: 800rpx;
  height: 400rpx;
  position: absolute;
  margin-top: 40rpx;
}

.scroll-view{
  width: 800rpx;
  height: 500rpx;
}

.currentTime-lyric{
  font-style:normal;
  font-size: 40rpx;
  color:rgb(250, 107, 41);
  margin-top: 15rpx;
}

.normal-lyric{
  margin-top: 15rpx;
  font-style:normal;
  font-size: 32rpx;
  color:#fff;
}

.contentText{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
}

.song-title{
  margin-top: 50rpx;
  position: absolute;
  color: #fff;
}
/* 用户信息展示 */
.userinfo-container{
  display: flex;
  margin-top: 700rpx;
  position: absolute;
  flex-direction: row;
}
.userinfo-container-item{
  display: flex;
  flex-direction: column;
  margin: 40rpx;
  font-size: 40rpx;
  align-items: center;
}
/* 用户头像 */
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
/* 用户昵称 */
.userinfo-nickname {
  color: #aaa;
}

.score-image-container{
  width: 100%;
  height: 100%;
  position: absolute;
}

.score{
  width: 100%;
  position: fixed;
  bottom:0px;
  display: flex;
  justify-content: center;
}

.score-image{
  width: 760rpx;
  height: 240rpx;
}

.progress{
  width:600rpx;
  height: 10rpx;
  position: absolute;
  margin-top: 700rpx;
}